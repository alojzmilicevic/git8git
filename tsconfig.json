{
  "compilerOptions": {
    "useDefineForClassFields": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["chrome"],
  },
  "exclude": ["node_modules", "dist"]
}

